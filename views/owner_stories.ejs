<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/stories.css" type="text/css" />
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <title>CREATE STORY</title>
</head>
<body>

  <header>
    <%- include('partials/_header') %>
  </header>

  <!--STORY INPUT AREA-->
  <main>
    <button id="new_story">Create Story</button>
    <p>Start a <a onclick="createFunction" href="#">New Story</a></p>
  <section class="new-story" id="create-story">
    <p class="error-message"></p>
    <form class="new-story-form">
      <div id="title-input">
        <label for="new-story-title">TITLE</label>
        <textarea class="title-input" name="new-story-title" rows="1"></textarea>
      </div>
      <div id="story-text-input">
        <label for="new-story-text">STORY</label>
        <textarea class="story-text-input" name="new-story-text" rows="4"></textarea>
      </div>
      <div class="story-input-footer">
        <button type="submit">CREATE</button>
      </div>
    </form>
  </section>
  <div class="all-stories-container">
     <section class="single-story-container">
      <% for (let story in stories) { %>
        <header>
         <div class="title"><a href="/stories/<%= stories[story].id %>"><%= stories[story].title %></a></div>
         <div class="creator">Created By: <%= stories[story].owner_id %></div>
         <div class="completed">Completed: <%= stories[story].iscomplete %></div>
        </header>
        <div class="content"><%= stories[story].content %></div>
       <% } %>
      </section>
  </div>
</main>

  <!-- Bootstrap JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script>
    function createFunction () {
      const createStory = document.getElementById("create-story");
      if (createStory.style.display === "none") {
        createStory.style.display = "block";
      } else {
        createStory.style.display = "none";
      }
    };
  </script>
  <script type="text/javascript" src="/scripts/owner_stories.js"></script>
  <script> const userid = <%= userid %> </script>
