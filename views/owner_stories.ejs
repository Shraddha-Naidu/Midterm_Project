<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/stories.css" type="text/css" />

  <title>My Stories/title>
</head>
<body>

  <header>
    <%- include('partials/_header') %>
  </header>

  <!-- NEW STORY INPUT AREA -->
  <main>
    <p>Start a <a onclick="createFunction" href="#">New Story</a></p>
  <section class="new-story" id="create-story">
    <p class="error-message"></p>
    <form class="new-story-form">
      <div class="title-input">
        <label for="new-story-title">TITLE</label>
        <textarea class="title-input" rows="1"></textarea>
      </div>
      <div class="story-text-input">
        <label for="new-story-text">STORY</label>
        <textarea class="story-text-input" rows="4"></textarea>
      </div>
      <div class="story-input-footer">
        <button type="submit">CREATE</button>
      </div>
    </form>
  </section>
  <br>

  <!-- ALL OWNER STORIES -->
  <div class="all-stories-container">
     <section class="owner-stories parchment"></section>
  </div>
</main>

  <!-- Bootstrap JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script>
    function createFunction () {
      const createStory = document.getElementById("create-story");
      if (createStory.style.display === "none") {
        createStory.style.display = "block";
      } else {
        createStory.style.display = "none";
      }
    };
  </script>
