<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/stories.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <!-- <link rel="stylesheet" href="/styles/layout.css" type="text/css" /> -->
  <title>CREATE STORY</title>
</head>
<body>

  <header>
    <%- include('partials/_header') %>
  </header>

  <!--STORY INPUT AREA-->
  <main>
    <!-- Button trigger modal -->
    <button type="button" class="button" id="create_story_button" data-bs-toggle="modal" data-bs-target="#exampleModalCenter">
      BEGIN YOUR ADVENTURE üñãÔ∏è
    </button>
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Start Your Story Here</h5>
        <!-- <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button> -->
      </div>
      <div class="modal-body">
        <section class="new-story" id="create-story">
          <p class="error-message"></p>
          <form class="new-story-form" id="create_form">
            <div id="title-input">
              <label for="new-story-title">Title</label>
              <textarea class="title-input" name="new-story-title" rows="1"></textarea>
            </div>
            <div id="story-text-input">
              <label for="new-story-text">Story</label>
              <textarea class="story-text-input" name="new-story-text" rows="4"></textarea>
            </div>
          </form>
        </section>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="">Close</button>
        <button type="submit" class="btn btn-primary" form="create_form" data-bs-dismiss="modal">Create</button>
      </div>
    </div>
  </div>
</div>
    <!-- <p>Start a <a onclick="createFunction" href="#">New Story</a></p> -->

  <div class="all-stories-container">
     <section class="single-story-container">
      <% for (let story in stories) { %>
        <header>
         <div class="title"><a href="/stories/<%= stories[story].id %>"><%= stories[story].title %></a></div>
         <div class="creator">Created By: <%= stories[story].owner_id %></div>
         <div>
          <% if(stories[story].iscomplete === false) {%>
            <p class ='status' id="status_false">Status: In Progress</p>
          <% } else { %>
            <p class ='status' id="status_true">Status: Complete</p>
          <% } %>
         </div>
        </header>
        <div class="content"><%= stories[story].content %></div>
       <% } %>
      </section>
  </div>
</main>


  <!-- Bootstrap JavaScript Bundle with Popper -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script type="text/javascript" src="/scripts/owner_stories.js"></script>
  <script> const userid = <%= userid %> </script>
</body>
</html>
